{
    "$schema": "https://json.schemastore.org/tsconfig.json",

    "include": [
        "src/**/*"
    ],
    
    "exclude": [
        "src/doc.ts"
    ],

    "compilerOptions": {

        "module": "CommonJS",
        "moduleResolution": "Node",

        "target": "ES2021",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true,
        "sourceMap": true,

        "lib": ["ESNext", "DOM"]

    },
    
}
